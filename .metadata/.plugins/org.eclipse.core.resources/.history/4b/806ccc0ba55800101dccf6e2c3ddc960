package BaekJoon;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int input;
		
		input = sc.nextInt();
		for(int i=1; i<input+1; i++) {
			for(int j=input; j>i; j--) {
				System.out.print(" ");
				}
			for(int k=0; k<i; k++) {
				System.out.print("*");
			}
			System.out.print("\n");
		}
		
	}
}
