
public class Loop {

	public static void main(String[] args) {
	
		int a = 0;
		int b = 0;
		for(int i=0, s=1; s<1000; i++, s*=2) {
			a = i;
			b = s;
            if (i >= 500) {
                break;
            }
		}
			System.out.println("접은 횟수 : " + a);
			System.out.println("사각형 개수 : " +  b);
	}

}
